#Nombre que le damos a este microservicio
spring.application.name=microservicio-usuarios
#Puerto que tendrá asignado este microservicio, será aleatorio para poder escalar
server.port=${PORT:0}
#Nombre de este microservicio en eureka (el mismo que arriba)
eureka.instance.instance-id=${spring.application.name}:${random.value}
#Ruta para autoregistrarse en eureka
eureka.client.service-url.defaultZone=http://localhost:8761/eureka


#URL para la BDD, junto al nombre que tiene la misma
spring.datasource.url=jdbc:mysql://localhost:3306/db_microservicios_examenesuse?Unicode=true&characterEncoding=utf8
#Usuario
spring.datasource.username=root
#Contrasenia
spring.datasource.password=Scenic9513HBM
#Driver utilizado
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

#Dialecto para MySQL
spring.jpa.database-platform=org.hibernate.dialect.MySQL5Dialect
#Crear las tablas automáticamente en base a las anotaciones o metadatas dadas
spring.jpa.generate-ddl=true
#Para mostrar las consultas que se están generando behind the scenes en el log
logging.level.org.hibernate.SQL=debug

